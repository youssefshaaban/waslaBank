<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".ui.find_ride.FindRideActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E6E6"
        tools:context=".ui.find_ride.FindRideActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/more"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_bar">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    tools:src="@drawable/im_wasla" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/profile_image"
                    android:layout_toLeftOf="@id/rating_parent"
                    android:layout_toRightOf="@id/profile_image"

                    android:layout_toStartOf="@id/rating_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#8F8F8F"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="David Johnson" />

                    <TextView
                        android:id="@+id/code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_profile"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/Credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Credit"
                        android:textColor="#8F8F8F"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rating_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <RatingBar
                        android:id="@+id/rating_bar"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:isIndicator="true"
                        android:theme="@style/yellow_rating_bar"
                        tools:rating="3" />

                </LinearLayout>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/card"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_star"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_star"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/my_reviews"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_message"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_message"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="Chats"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/group_chats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_group_black_24dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_group_black_24dp"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="Group Chats"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_notifications"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_notifications"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/notifications"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/transfer_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_transfer_credit"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_transfer_credit"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/transfer_credit"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/verify_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_verify"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_verify"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/verify_driver"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/my_rides"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_car"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_car"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/my_rides_small_2"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/my_daily_rides"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_car"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_car"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/daily_trip"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_announcement"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_announcement"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/terms_conditions"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_announcement"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_announcement"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="Privacy"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/friends_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_person"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/friends"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/link_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_person"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/link_account"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/refer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_share"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_share"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/refer_earn"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_rate"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_rate"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/rate_wasla"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_help"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_help"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/help"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_logout"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_logout"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="@string/logout"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</ScrollView>