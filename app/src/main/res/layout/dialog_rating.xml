<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/bg_button_mobile_verification"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/your_rate"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="150dp"
                android:layout_marginTop="5dp"
                android:background="#9e9e9e" />

            <TextView
                android:id="@+id/product_text"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:text="@string/what_is_your_rate"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:visibility="visible" />


            <RatingBar
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:stepSize="1"
                android:progressBackgroundTint="#cccccc"
                android:id="@+id/rating_bar_2"
                android:theme="@style/yellow_rating_bar"
                android:layout_height="wrap_content" />


            <TextView
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:text="@string/leave_comment"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:visibility="visible" />


            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:elevation="1dp"
                android:background="@drawable/bg_button_mobile_verification"
                android:inputType="textAutoComplete"
                android:padding="10dp"
                android:textSize="12sp"
                android:visibility="visible" />


            <Button
                android:id="@+id/btn_rate"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_button"
                android:baselineAligned="false"
                android:text="@string/rate"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>